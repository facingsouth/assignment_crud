<%= form_for @item do |f| %>
  <%= f.label :item_name, "Item's name" %>
  <%= f.text_field :item_name, class: 'form-control' %>
  <%= f.label :item_des, "Description" %>
  <%= f.text_field :item_des, class: 'form-control' %>
  <%= f.label :item_price, "Price" %>
  <%= f.text_field :item_price, class: 'form-control' %>

  <%= f.submit %>
<% end %>